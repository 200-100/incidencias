<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_incidencia_empleado_tree" model="ir.ui.view">
        <field name="name">incidencia.empleado.tree</field>
        <field name="model">incidencia.empleado</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree>
                <field name="numero" />
                <field name="empleado" />
                <field name="tipo_incidencia" />
                <field name="fecha" />
                <field name="unidad"/>
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="view_incidencia_empleado_form" model="ir.ui.view">
        <field name="name">incidencia.empleado.form</field>
        <field name="model">incidencia.empleado</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" clickable="False" statusbar_visible="open,close,cancel"/>
                    <button name="action_cancel" type="object" string="Cancelar" class="btn-primary" />
                </header>
                
                <sheet>
                    <div class = "oe_title">
                        <h2>
                            <field name="numero"/>
                        </h2>
                    </div>
                    <group>
                        <group string="Empleado">
                            <field name="fecha" attrs="{'readonly':[('state', '!=', 'open')]}" required="1"/>
                            <field name="empleado" attrs="{'readonly':[('state', '!=', 'open')]}"  required="1"/>
                            <field name="tipo_incidencia" attrs="{'readonly':[('state', '!=', 'open')]}"  required="1"/>
                            <field name="motivo_id" attrs="{'readonly':[('state', '!=', 'open')]}"  required="1"/>
                        </group>
                        <group string="Motivo">
                            <field name="currency_id" invisible="1"/>
                            <field name="monto" attrs="{'readonly':[('state', '!=', 'open')]}"  widget='monetary' options="{'currency_field': 'currency_id'}" required="1"/>
                            <field name="aportacion" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                            <field name="saldo" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                            <field name="unidad" attrs="{'readonly':[('state', '!=', 'open')]}"  required="1"/>
                        </group>
                    </group>
                    <group string= "Notas">
                        <field name="notas" placeholder="Escribe tus notas aquÃ­ (opcional)" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>