<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_incidencia_empleado_tree" model="ir.ui.view">
        <field name="name">incidencia.empleado.tree</field>
        <field name="model">incidencia.empleado</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree>
                <field name="numero" />
                <field name="empleado" />
                <field name="tipo_incidencia" />
                <field name="fecha" />
                <field name="unidad"/>
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="view_incidencia_empleado_form" model="ir.ui.view">
        <field name="name">incidencia.empleado.form</field>
        <field name="model">incidencia.empleado</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" clickable="False" statusbar_visible="open,close,cancel"/>
                </header>
                <div class = "oe_title">
                    <h2>
                        <field name="numero"/>
                    </h2>
                </div>
                <sheet>
                    <group string="Documento">
                        <field name="fecha" attrs="{'readonly':[('state', 'in', ['open', 'cancel'])]}" required="1"/>
                        <field name="empleado" attrs="{'readonly':[('state', 'in', ['open', 'cancel'])]}" required="1"/>
                        <field name="tipo_incidencia" attrs="{'readonly':[('state', 'in', ['open', 'cancel'])]}" required="1"/>
                        <field name="motivo_id" attrs="{'readonly':[('state', 'in', ['open', 'cancel'])]}" required="1"/>
                        <field name="monto" attrs="{'readonly':[('state', 'in', ['open', 'cancel'])]}" required="1"/>
                        <field name="aportacion" />
                        <field name="saldo" />
                        <field name="unidad" attrs="{'readonly':[('state', 'in', ['open', 'cancel'])]}" required="1"/>
                    </group>
                    <group string= "Notas">
                        <field name="notas" placeholder="Escribe tus notas aquÃ­ (opcional)" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>